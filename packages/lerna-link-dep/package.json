{
  "name": "lerna-link-dep",
  "version": "2.0.4",
  "description": "Like lerna add but does just the symlinking, works on CLI bins too",
  "keywords": [
    "add",
    "cli",
    "command-line",
    "dependencies",
    "deps",
    "devdependencies",
    "devdeps",
    "lerna",
    "link",
    "ln",
    "ln -s",
    "monorepo",
    "symlink",
    "tool",
    "utility"
  ],
  "homepage": "https://codsen.com/os/lerna-link-dep/",
  "repository": {
    "type": "git",
    "url": "https://github.com/codsen/codsen.git",
    "directory": "packages/lerna-link-dep"
  },
  "license": "MIT",
  "author": {
    "name": "Roy Revelt",
    "email": "roy@codsen.com",
    "url": "https://codsen.com"
  },
  "type": "module",
  "bin": {
    "deplink": "cli.js",
    "johnnydepp": "cli.js",
    "linkdep": "cli.js"
  },
  "scripts": {
    "build": "echo 'skip build step for a CLI'",
    "ci_test": "npm run format && tap --no-only --reporter=silent",
    "clean_cov": "../../scripts/leaveCoverageTotalOnly.js",
    "dev": "echo\"\"",
    "devunittest": "npm run dev && tap --only -R 'base'",
    "format": "npm run lect && npm run prettier && npm run lint",
    "lect": "lect",
    "lint": "../../node_modules/eslint/bin/eslint.js . --ext .js --fix --config \"../../.eslintrc.json\" --quiet",
    "prettier": "../../node_modules/prettier/bin-prettier.js '*.{js,css,scss,vue,md,ts}' --write --loglevel silent",
    "republish": "npm publish || :",
    "tap": "tap",
    "test": "npm run test:ci",
    "test:ci": "npm run lint && npm run unittest && npm run format",
    "unittest": "tap --no-only --reporter=terse"
  },
  "tap": {
    "check-coverage": false,
    "node-arg": [
      "--no-warnings",
      "--experimental-loader",
      "@istanbuljs/esm-loader-hook"
    ],
    "timeout": 0
  },
  "lect": {
    "cliSpecialKeyword": "johnnydepp",
    "cliSpecialKeywordInstructions": "remember the actor, DEPP as in _Johnny Dependency_ - just type his full name and surname.",
    "licence": {
      "extras": [
        ""
      ]
    },
    "various": {
      "devDependencies": []
    }
  },
  "dependencies": {
    "execa": "^6.0.0",
    "fs-extra": "^10.0.0",
    "meow": "^10.1.2",
    "package-json-editor": "^1.0.1",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "@istanbuljs/esm-loader-hook": "^0.1.2",
    "core-js": "^3.19.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.3.0",
    "lect": "^0.18.7",
    "tap": "^15.1.5",
    "tempy": "^2.0.0",
    "tslib": "^2.3.1"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  }
}
