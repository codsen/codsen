{
  "name": "codsen-mono",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Roy Revelt",
    "email": "roy@codsen.com",
    "url": "https://codsen.com"
  },
  "workspaces": [
    "packages/*",
    "data/"
  ],
  "type": "module",
  "engines": {
    "node": ">=14.18.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "npm run house && turbo run test",
    "unit": "npm run house && turbo run unit",
    "perf": "turbo run perf",
    "lect": "turbo run lect",
    "nuke": "git clean -fdx",
    "cjs-on": "turbo run cjs-on",
    "cjs-off": "turbo run cjs-off",
    "prep": "turbo run prep",
    "prep2": "lerna run prep",
    "format": "prettier --write '**/*.{ts,tsx,.md}'",
    "deploy": "echo 'would deploy'",
    "house": "lernacleanchangelog && npm run prettier && uvu ops/helpers && npm run update:projectReferences && npm run ci:generate:info && npm run ci:generate:changelogs && npm run ci:build:root-readme",
    "turbo": "turbo",
    "lerna": "lerna",
    "ts": "deno run --allow-read --allow-run --allow-write --allow-net",
    "cm": "git-cz -n",
    "prettier": "turbo run prettier:format",
    "ci:generate:info": "node ./ops/scripts/generate-info.js",
    "ci:generate:changelogs": "node ./ops/scripts/generate-changelogs.js",
    "ci:build:root-readme": "node ./ops/scripts/generate-readme.js",
    "ci:lerna:version": "lerna version --no-push --conventional-commits --no-commit-hooks --yes && lernacleanchangelog '**'",
    "ci:publish:all": "turbo run letspublish",
    "graph": "lerna-dependency-graph -f 'png' -o './deps-graph.png'",
    "wipe": "rm package-lock.json || true && rm -rf node_modules && git clean -fXd && npm i",
    "test:projectReferences": "workspaces-to-typescript-project-references --includesRoot --check",
    "update:projectReferences": "workspaces-to-typescript-project-references --includesRoot"
  },
  "devDependencies": {
    "@monorepo-utils/workspaces-to-typescript-project-references": "^2.9.0",
    "@rollup/plugin-json": "^6.0.0",
    "@types/node": "^20.1.4",
    "@types/tap": "^15.0.8",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "benchmark": "^2.1.4",
    "c8": "^7.13.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dequal": "^2.0.3",
    "detergent": "^9.2.0",
    "esbuild": "^0.17.19",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-row-num": "^4.0.12",
    "eslint-plugin-test-num": "^3.0.13",
    "execa": "^7.1.1",
    "jest": "^29.5.0",
    "json-comb-core": "^8.0.11",
    "lerna": "^6.6.2",
    "lerna-clean-changelogs-cli": "^3.0.9",
    "lerna-dependency-graph": "^1.1.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.intersection": "^4.4.0",
    "lodash.omit": "^4.5.0",
    "lodash.partition": "^4.6.0",
    "object-path": "^0.11.8",
    "perf-ref": "^1.0.5",
    "prettier": "^2.8.8",
    "rehype-format": "^4.0.1",
    "rehype-stringify": "^9.0.3",
    "remark-conventional-commit-changelog-timeline": "^3.0.10",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "remark-typography": "^0.6.7",
    "rimraf": "^5.0.0",
    "rollup": "^3.21.7",
    "rollup-plugin-dts": "^5.3.0",
    "semver-regex": "^4.0.5",
    "simple-git": "^3.18.0",
    "sort-package-json": "^2.4.1",
    "tempy": "^3.0.0",
    "turbo": "^1.9.4",
    "typescript": "^5.0.4",
    "unified": "^10.1.2",
    "uvu": "^0.5.6",
    "write-file-atomic": "^5.0.1"
  }
}
