{
  "name": "codsen-mono",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Roy Revelt",
    "email": "roy@codsen.com",
    "url": "https://codsen.com"
  },
  "workspaces": [
    "webapps/*",
    "components/*",
    "packages/*",
    "data/"
  ],
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "yarn run house && turbo run test",
    "unit": "yarn run house && turbo run unit",
    "perf": "turbo run perf",
    "lect": "turbo run lect",
    "format": "prettier --write '**/*.{ts,tsx,.md}'",
    "deploy": "echo 'would deploy'",
    "house": "yarn run prettier && uvu ops/helpers && yarn update:projectReferences && yarn run ci:build:root-readme && yarn run ci:generate:info",
    "turbo": "turbo",
    "lerna": "lerna",
    "ts": "deno run --allow-read --allow-run --allow-write --allow-net",
    "cm": "git-cz -n",
    "prettier": "turbo run prettier:format",
    "ci:generate:info": "node ./ops/scripts/generate-info.js",
    "ci:build:root-readme": "node ./ops/scripts/generate-readme.js",
    "ci:lerna:version": "lerna version patch --force-publish --no-push --no-commit-hooks --yes && lernacleanchangelog '**'",
    "ci:publish:all": "turbo run letspublish",
    "graph": "lerna-dependency-graph -f 'png' -o './deps-graph.png'",
    "wipe": "rm package-lock.json || true && rm -rf node_modules && git clean -fXd && yarn",
    "test:projectReferences": "workspaces-to-typescript-project-references --includesRoot --check",
    "update:projectReferences": "workspaces-to-typescript-project-references --includesRoot"
  },
  "devDependencies": {
    "@monorepo-utils/workspaces-to-typescript-project-references": "^2.8.2",
    "@rollup/plugin-json": "^4.1.0",
    "@types/node": "^18.0.1",
    "@types/tap": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "axios": "^0.27.2",
    "benchmark": "^2.1.4",
    "c8": "^7.11.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dequal": "^2.0.2",
    "esbuild": "^0.14.48",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-row-num": "^2.0.1",
    "eslint-plugin-test-num": "^2.0.1",
    "execa": "^6.1.0",
    "jest": "^28.1.2",
    "json-comb-core": "^7.0.18",
    "lerna": "^5.1.6",
    "lerna-clean-changelogs-cli": "^2.0.16",
    "lerna-dependency-graph": "^1.1.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.intersection": "^4.4.0",
    "lodash.omit": "^4.5.0",
    "lodash.partition": "^4.6.0",
    "object-path": "^0.11.8",
    "perf-ref": "^1.0.4",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.7",
    "rollup-plugin-dts": "^4.2.2",
    "simple-git": "^3.10.0",
    "tempy": "^3.0.0",
    "turbo": "^1.3.1",
    "typescript": "^4.7.4",
    "uvu": "^0.5.6"
  },
  "packageManager": "yarn@1.22.17"
}
