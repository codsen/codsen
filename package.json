{
  "name": "codsen-mono",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "webapps/*",
    "components/*",
    "packages/*"
  ],
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "yarn run house && turbo run test",
    "unit": "yarn run house && turbo run unit",
    "perf": "turbo run perf",
    "lect": "turbo run lect",
    "format": "prettier --write '**/*.{ts,tsx,.md}'",
    "deploy": "echo 'would deploy'",
    "house": "yarn run ci:fetch:webapps && uvu ops/helpers && yarn update:projectReferences && yarn run ci:build:root-readme && yarn run ci:generate:info",
    "turbo": "turbo",
    "lerna": "lerna",
    "cm": "git-cz -n",
    "ci:fetch:webapps": "node ./ops/scripts/fetch-webapps-json.js",
    "ci:generate:info": "node ./ops/scripts/generate-info.js",
    "ci:build:root-readme": "node ./ops/scripts/generate-readme.js",
    "ci:lerna:version": "lerna version --no-push --conventional-commits --no-commit-hooks --yes && lernacleanchangelog '**'",
    "ci:publish:all": "turbo run letspublish",
    "graph": "lerna-dependency-graph -f 'png' -o './deps-graph.png'",
    "wipe": "rm package-lock.json || true && rm -rf node_modules && git clean -fXd && yarn",
    "test:projectReferences": "workspaces-to-typescript-project-references --includesRoot --check",
    "update:projectReferences": "workspaces-to-typescript-project-references --includesRoot"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          "types/**",
          ".next/**"
        ]
      },
      "test": {
        "dependsOn": [
          "lect",
          "build"
        ],
        "outputs": []
      },
      "lint": {
        "dependsOn": [
          "build"
        ],
        "outputs": []
      },
      "unit": {
        "dependsOn": [
          "build"
        ],
        "outputs": []
      },
      "dev": {
        "outputs": [],
        "cache": false
      },
      "lect": {
        "outputs": [],
        "cache": false
      },
      "letspublish": {
        "outputs": [],
        "cache": false
      },
      "perf": {
        "outputs": [],
        "cache": false
      },
      "examples": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [],
        "cache": false
      },
      "prepare": {
        "dependsOn": [
          "unit",
          "examples",
          "lint"
        ]
      }
    }
  },
  "devDependencies": {
    "@logux/eslint-config": "^46.1.1",
    "@monorepo-utils/workspaces-to-typescript-project-references": "^2.7.4",
    "@rollup/plugin-json": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@types/node": "^17.0.8",
    "@types/tap": "^15.0.5",
    "axios": "^0.24.0",
    "benchmark": "^2.1.4",
    "c8": "^7.11.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dequal": "^2.0.2",
    "esbuild": "^0.14.11",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-row-num": "^2.0.1",
    "eslint-plugin-test-num": "^2.0.1",
    "execa": "^6.0.0",
    "json-comb-core": "^7.0.10",
    "lerna": "^4.0.0",
    "lerna-clean-changelogs-cli": "^2.0.10",
    "lerna-dependency-graph": "^1.1.0",
    "lodash.intersection": "^4.4.0",
    "lodash.omit": "^4.5.0",
    "lodash.partition": "^4.6.0",
    "lodash.camelcase": "^4.3.0",
    "perf-ref": "^1.0.3",
    "prettier": "^2.5.1",
    "object-path": "^0.11.8",
    "rimraf": "^3.0.2",
    "rollup": "^2.63.0",
    "rollup-plugin-dts": "^4.1.0",
    "simple-git": "^2.48.0",
    "tempy": "^2.0.0",
    "turbo": "^1.0.24",
    "typescript": "^4.5.4",
    "uvu": "^0.5.3"
  }
}
