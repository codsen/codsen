{
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "noPush": true,
      "message": "chore: release [skip ci]"
    }
  },
  "ignoreChanges": [
    "**/node_modules/**",
    "**/.npmignore",
    "**/perf/**",
    "./data",
    "**/*.md"
  ],
  "lifecycle": {
    "version": "git add ."
  },
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
