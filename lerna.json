{
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "noPush": true,
      "message": "chore: release [skip ci]"
    }
  },
  "ignoreChanges": [
    "**/node_modules/**",
    "**/.npmignore",
    "**/perf/**",
    "**/*.md"
  ],
  "packages": ["packages/*", "data/"],
  "version": "independent",
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
